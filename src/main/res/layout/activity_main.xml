<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_itineraries"
            android:id="@+id/buttonItineraries" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_marginTop="55dp"
            android:onClick="clickItineraries"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_checklist"
            android:id="@+id/buttonChecklist" android:layout_below="@+id/buttonItineraries" android:layout_alignParentLeft="true"
            android:layout_marginTop="12dp"
            android:onClick="clickChecklist"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_map"
            android:id="@+id/buttonMap" android:layout_below="@+id/buttonChecklist" android:layout_alignParentLeft="true"
            android:layout_marginTop="12dp"
            android:onClick="clickMap"/>
</RelativeLayout>
